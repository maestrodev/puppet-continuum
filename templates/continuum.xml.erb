<?xml version="1.0" encoding="UTF-8"?>
<continuum-configuration>
  <baseUrl><%= application_url %></baseUrl>
  <buildOutputDirectory><%= home %>/data/build-output-directory</buildOutputDirectory>
  <workingDirectory><%= home %>/data/working-directory</workingDirectory>
  <releaseOutputDirectory><%= home %>/data/release-output-directory</releaseOutputDirectory>
<% if has_variable?("shared_secret_password") %>
  <distributedBuildEnabled>true</distributedBuildEnabled>
  <sharedSecretPassword><%=shared_secret_password%></sharedSecretPassword>
<% end %>
</continuum-configuration>
